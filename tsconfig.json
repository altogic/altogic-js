{
   "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
   },
   "include": ["src"],
   "exclude": ["node_modules", "**/__tests__/*"]
}
